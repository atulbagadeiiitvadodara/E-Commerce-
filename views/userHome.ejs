<section class="section1">


  <div class="dealsHeading">
    <a name="offersLink" href=""></a>
    <h2><i class="fas fa-dizzy"></i> Today's Best Deals</h2>
  </div>


  <div class="row">

    <!-- item 1 -->
    <% items.forEach(function(id){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 colBox">
      <div style="width:100%; display: inline-block;">
        <form class="" action="/wishList" method="POST">
          <button name="prodID" value="<%= id._id %>" style="margin:5px; float:right;" type="submit" class="wishxxx btn btn-sm btn-outline-danger"><i class="fab fa-gratipay fa-lg"></i></button>
        </form>
      </div>
      <div>
        <img class="hotImg" src="<%= id.imgSrc %>" alt="image 1">
      </div>
      <div class="hotText">
        <h5 style="margin-top: 10px; margin-bottom: 10px;"><%= id.productName %></h5>
        <form style="margin:0; padding:0; display: inline-block;" class="" action="/productDetails" method="POST">
          <button name="prodID" value="<%= id._id %>" style="margin-top: 10px; margin-bottom: 10px;" type="submit" class="btn btn-sm btn-outline-secondary">View Product</button>
        </form><br>
        <form style="margin:0; padding:0; display: inline-block;" class="" action="/buyNow" method="POST">
          <button name="prodID" value="<%= id._id %>" style="margin-top:5px;" class="btn btn-sm btn-outline-success">Buy Now</button>
        </form>
        <form style="margin:0; padding:0; display: inline-block;" class="" action="/userCart" method="POST">
          <button name="prodID" value="<%= id._id %>" style="margin-top:5px;" type="submit" class="cartxxx btn btn-sm btn-outline-primary">Add to Cart</button>
        </form>
      </div>
    </div>
    <% }) %>


  </div>
</section>

