
<%- include("partials/loginHeader"); -%>


<div class="container mt-5" style="padding-top: 20px;">
  <h1 style="margin: 20px 0 20px 15px; ">Please Login !</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
             <span style="font-weight:500;">  OR   </span><a href="/register" class="btn btn-dark">Register Here</a>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-6" style="margin-top: 20px; margin-bottom: 30px;">
      <div class="card">
        <div class="card-body card-outline-google">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google icon"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div>

    <div class="col-sm-6" style="margin-top: 20px; margin-bottom: 30px;">
      <div class="card">
        <div class="card-body card-outline-facebook">
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook icon"></i>
            Sign In with Facebook
          </a>
        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/footer') %>
