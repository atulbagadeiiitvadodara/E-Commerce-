<body>

  <section>

    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" id="colors" style="color:tomato;" href="/">OnePlace</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a id="colors" class="nav-link" href="#offersLink"><i class="fab fa-angellist"></i> Today's offers</a>
          </li>
          <li class="nav-item dropdown">
            <a id="colors" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              More
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/workInProgress">About us</a>
              <a class="dropdown-item" href="/workInProgress">Contact us</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/workInProgress">FAQ</a>
            </div>
